<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity" >
  
    <Button
        android:id="@+id/AnnotationPart"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/result"
        android:background="@android:color/background_light"
        android:minHeight="48dp"
        android:textColor="@android:color/primary_text_light"
        android:textSize="24dp"
        android:textStyle="bold"
        android:visibility="visible" />
  
        <Button
        android:id="@+id/result"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/AnnotationPart"
        android:layout_alignBottom="@+id/AnnotationPart"
        android:layout_alignParentRight="true" />


    <Button
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/ar"
        android:layout_below="@+id/ar"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/ar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/htag"
        android:layout_alignBottom="@+id/htag"
        android:layout_alignLeft="@+id/save"
        android:clickable="false"
        android:enabled="false"
        android:text="ar" />

    <Button
        android:id="@+id/save"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ar"
        android:layout_alignLeft="@+id/AnnotationPart"
        android:layout_alignTop="@+id/tag" 
        android:layout_alignBottom="@+id/tag" />

    <Button
        android:id="@+id/tag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/result"
        android:layout_below="@+id/result"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/htag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tag"
        android:layout_below="@+id/tag"
        android:layout_marginTop="14dp"
        android:enabled="false" />

    <Button
        android:id="@+id/audio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/htag"
        android:layout_alignTop="@+id/back"
        android:clickable="false"
        android:enabled="false" />
    
</RelativeLayout>
